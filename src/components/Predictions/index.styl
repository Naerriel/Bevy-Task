@import "../../commonStyle.styl"

.c-predictions
    .header
        font-family $main-font
        color $primary-color
    select
        margin 8px
        padding 0
        border 0
        background-color inherit
        font inherit
        border 1px solid $primary-color
        border-radius 3px

.c-discipline
    padding 5px 10px
    margin 5px 0
    border-radius 3px
    border 1px solid $primary-color
    height 30px
    overflow hidden
    position relative
    transition all 1s ease-out

.collapsed
    height 170px

.c-discipline
    img
        width 30px
        height auto
        vertical-align middle
        margin-right 10px
        transition inherit

.collapsed
    img
        width 60px
        height auto

.score
    position relative
    top 5px
    float right

.isIndividual
    position relative
    top 5px
    float right
    margin-right 10px

.tags
    display block

.scoreDrillDown
    width 120px
    position absolute
    left 50%
    top -5px

.drillDownSkill
    display block

.drillDownTitle
    font-weight bold

.drillDownScore
    float right
